<div class="modal" id="uploadModal">
    <div class="modal-box">
        <span class="close" onclick="closeModals()">âœ–</span>
        <h3>Upload Certificate / Marksheet</h3>
        <input type="file" id="uploadFile" accept=".jpg, .png, .jpeg, .pdf">
        <button class="btn" onclick="validateFile()">Upload</button>
    </div>
</div>

<script>
    function login() {
        const name = document.getElementById("username").value;
        const id = document.getElementById("studentId").value;

        if (name === "" || id === "") {
            alert("Please fill both fields");
            return;
        }

        document.getElementById("userDetails").innerHTML = "Welcome, " + name + " (ID: " + id + ")";
        document.getElementById("loginScreen").style.display = "none";
        document.getElementById("dashboard").style.display = "block";
    }

    function logout() {
        location.reload();
    }

    function openCashIn() {
        document.getElementById("cashInModal").style.display = "flex";
    }

    function openCashOut() {
        document.getElementById("cashOutModal").style.display = "flex";
    }

    function openUpload() {
        document.getElementById("uploadModal").style.display = "flex";
    }

    function closeModals() {
        document.getElementById("cashInModal").style.display = "none";
        document.getElementById("cashOutModal").style.display = "none";
        document.getElementById("uploadModal").style.display = "none";
    }

    function confirmCashIn() {
        let amt = document.getElementById("cashInAmount").value;
        if (amt === "") { alert("Enter amount"); return; }
        alert("â‚¹" + amt + " added to your account");
        closeModals();
    }

    function confirmCashOut() {
        let amt = document.getElementById("cashOutAmount").value;
        if (amt === "") { alert("Enter amount"); return; }
        alert("â‚¹" + amt + " deducted from your account");
        closeModals();
    }

    function validateFile() {
        let file = document.getElementById("uploadFile").files[0];

        if (!file) {
            alert("Please select a file");
            return;
        }

        let allowed = ["image/png", "image/jpg", "image/jpeg", "application/pdf"];

        if (!allowed.includes(file.type)) {
            alert("Invalid file! Please upload only certificate/marksheet formats.");
            return;
        }

        alert("Uploaded Successfully âœ”");
        closeModals();
    }
</script>

